@model ForumSystem.Web.ViewModels.Questions.QuestionDisplayViewModel

<div class="panel panel-success">
    <div>
        <h3>
            <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
            @Model.Title
            </h3>
        </div>
        <div class="panel-body">
            <p>@Html.Raw(Model.Content)</p>
            <span class="label label-success">
                @Html.ActionLink("Add comment", "Create", "Answer", new { id = Model.Id }, null)
            </span>
            <hr />
            @foreach (var answer in Model.Answers)
            {
                <div class="panel-body">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                        @if (answer.Author != null)
                        {
                            @answer.Author.FullName
                        }
                       <i>@answer.CreatedOn</i>
                    </span>
                    @Html.Raw(answer.Content)
                </div>
                <div>
                    <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Tooltip on left">
                        @Html.ActionLink("Delete", "Delete", "Answer", new { id = answer.Id }, null)
                    </button>
                    @answer.Rating
                    @Html.ActionLink(" Rate", "Rate", "Answer", new { id = answer.Id }, null)
                    <span class="glyphicon glyphicon-hand-up" aria-hidden="true"></span>
                </div>
                <hr />
            }
        </div>
    </div>