@model ForumSystem.Models.Answer
<h3>
    <p class="text-success">Are you sure you want to rate this?</p>
</h3>
@using (Html.BeginForm("Rate", "Answer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div>
        @Html.Raw(Model.Content)
    </div>
    <div class="form-actions no-color">
        <input type="submit" value="Rate" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "ViewAll", new {id = Model.PostId})
    </div>
}