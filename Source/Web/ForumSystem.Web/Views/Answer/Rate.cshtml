@model ForumSystem.Models.Answer

<div class="container">
    <h3>
        <p class="text-info">Are you sure you want to rate this?</p>
    </h3>
    <div class="panel-body">
        @using (Html.BeginForm("Rate", "Answer", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-actions warning">
                <input type="submit" value="Rate" class="btn btn-info" /> |
                @Html.ActionLink("Back to List", "ViewAll", new { id = Model.PostId })
            </div>
        }
    </div>
</div>
